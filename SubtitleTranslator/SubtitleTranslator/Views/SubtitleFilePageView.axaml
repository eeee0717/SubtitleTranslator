<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:SubtitleTranslator.Views"
             xmlns:viewModels="clr-namespace:SubtitleTranslator.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SubtitleTranslator.Views.SubtitleFilePageView">
    <UserControl.DataContext>
        <viewModels:SubtitleFilePageViewModel/>
    </UserControl.DataContext>
    <Grid RowDefinitions="Auto, Auto, Auto">
        <views:FileUploadView Grid.Row="0" Margin="10" />
        <views:TranslatorControlView Grid.Row="1" Margin="10" />
        <views:FileListView Grid.Row="2" Margin="10" />
    </Grid>
</UserControl>
